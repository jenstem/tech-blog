<form id="add-blog-post" style="display: none;">
    <div class="d-grid gap-2 col-6 mx-auto">
        <h4 class="mt-5">Post Title</h4>
        <input class="form-control" id="blog-title" type="text" placeholder="Enter title of post">
        <h4 class="mt-3">Post Body</h4>
        <textarea class="form-control" id="blog-post" rows="3" placeholder="Enter text"></textarea>
    </div>
    <div class="d-grid gap-2 col-1 mx-auto">
        <button class="btn btn-info mt-2" type="submit">Save</button>
    </div>
</form>

<script src="/js/add.js"></script>